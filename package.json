{
  "name": "mindfulmeals",
  "version": "1.0.0",
  "description": "MindfulMeals - Nourish your body, mind, and soul",
  "private": true,
  "workspaces": [
    "mobile-app",
    "backend/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "prepare": "if command -v husky >/dev/null 2>&1; then husky install || true; else echo 'Skipping husky install (husky not found)'; fi",
    "start:mobile": "cd mobile-app && npm start",
    "start:backend": "cd backend && npm run dev",
    "install:mobile": "npm install --workspace mobile-app",
    "install:backend": "npm install --workspace backend",
    "build:mobile:ios": "cd mobile-app && npm run ios",
    "build:mobile:android": "cd mobile-app && npm run android",
    "clean": "npm run clean --workspaces --if-present",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "postinstall": "patch-package || true"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "husky": "^9.1.3",
    "lint-staged": "^15.2.2",
    "commitlint": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "prettier": "^2.8.8",
    "eslint": "^8.57.0",
    "patch-package": "^8.0.0"
  },
  "overrides": {
    "@babel/plugin-transform-async-generator-functions": "7.24.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,css,scss}": [
      "prettier --write",
      "git add"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}