# MindfulMeals Meal Planning Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3004

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=app_user
DB_PASSWORD=secure_password
DB_NAME=mindfulmeals

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI and Machine Learning Features
ENABLE_AI_MEAL_PLANNING=true
ENABLE_MINDFULNESS_INTEGRATION=true
ENABLE_CULTURAL_INTEGRATION=true
ENABLE_NUTRITIONAL_ANALYSIS=true
ENABLE_SEASONAL_INTELLIGENCE=true

# Mindfulness Configuration
MINDFULNESS_LEVELS=beginner,intermediate,advanced,expert
MEDITATION_DURATION_DEFAULT=5
BREATHING_EXERCISE_DEFAULT=true
GRATITUDE_PRACTICE_ENABLED=true
SENSORY_AWARENESS_ENABLED=true

# Cultural Integration
ENABLE_REGIONAL_CUISINES=true
ENABLE_FESTIVAL_INTEGRATION=true
ENABLE_TRADITIONAL_RECIPES=true
ENABLE_SEASONAL_COOKING=true
ENABLE_CULTURAL_STORIES=true

# Recipe Management
ENABLE_RECIPE_CREATION=true
ENABLE_RECIPE_RECOMMENDATIONS=true
ENABLE_INGREDIENT_SUBSTITUTIONS=true
ENABLE_COOKING_TIPS=true
ENABLE_NUTRITIONAL_SCORING=true

# Meal Planning Features
ENABLE_DAILY_PLANNING=true
ENABLE_WEEKLY_PLANNING=true
ENABLE_MONTHLY_PLANNING=true
ENABLE_FESTIVAL_PLANNING=true
ENABLE_HEALTH_GOAL_PLANNING=true

# Nutritional Analysis
ENABLE_CALORIE_CALCULATION=true
ENABLE_MACRO_NUTRIENT_TRACKING=true
ENABLE_VITAMIN_MINERAL_ANALYSIS=true
ENABLE_ALLERGEN_DETECTION=true
ENABLE_DIETARY_COMPLIANCE=true

# External API Keys (for future AI integration)
OPENAI_API_KEY=your_openai_api_key_here
NUTRITIONIX_API_KEY=your_nutritionix_api_key_here
NUTRITIONIX_APP_ID=your_nutritionix_app_id_here
SPOONACULAR_API_KEY=your_spoonacular_api_key_here

# Redis Configuration (for caching AI responses)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# AI Model Configuration
AI_MODEL_PROVIDER=openai
AI_MODEL_NAME=gpt-4
AI_MAX_TOKENS=2000
AI_TEMPERATURE=0.7
AI_CACHE_DURATION=3600

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Analytics and Monitoring
ENABLE_MEAL_PLANNING_ANALYTICS=true
ENABLE_MINDFULNESS_ANALYTICS=true
ENABLE_CULTURAL_ANALYTICS=true
ENABLE_HEALTH_GOAL_TRACKING=true
ENABLE_USER_ENGAGEMENT_METRICS=true
