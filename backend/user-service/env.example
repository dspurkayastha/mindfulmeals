# MindfulMeals User Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=app_user
DB_PASSWORD=secure_password
DB_NAME=mindfulmeals

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secure-jwt-access-secret-change-in-production
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-change-in-production

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# SMS Configuration (for OTP)
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
