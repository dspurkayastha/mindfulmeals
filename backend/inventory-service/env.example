# MindfulMeals Inventory Service Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3003

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=app_user
DB_PASSWORD=secure_password
DB_NAME=mindfulmeals

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags
ENABLE_BARCODE_SCANNING=true
ENABLE_WASTE_TRACKING=true
ENABLE_EXPIRY_REMINDERS=true
ENABLE_AUTO_SHOPPING_LISTS=true

# External API Keys (for future barcode integration)
OPEN_FOOD_FACTS_API_URL=https://world.openfoodfacts.org/api/v0
NUTRITIONIX_API_KEY=your_nutritionix_api_key_here
NUTRITIONIX_APP_ID=your_nutritionix_app_id_here

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# Analytics and Monitoring
ENABLE_INVENTORY_ANALYTICS=true
ENABLE_WASTE_ANALYTICS=true
ENABLE_CONSUMPTION_TRACKING=true
