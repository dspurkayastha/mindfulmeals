# Disable workspace features for EAS builds
workspaces-update=false
legacy-peer-deps=true

# Increase timeout for large dependency trees
fetch-timeout=600000
fetch-retries=10

# Use a faster registry
registry=https://registry.npmjs.org/

# Don't save exact versions (helps with monorepo)
save-exact=false

# Cache settings
cache-min=3600

# Disable package-lock in CI (EAS will generate its own)
package-lock=false